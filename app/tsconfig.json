{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // --- ADIÇÕES IMPORTANTES ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types" // Aponta para a pasta onde criaremos os nossos tipos
    ]
  },
  "include": [
    "src", 
    "src/@types.d.ts" // Inclui o nosso ficheiro de forma explícita
  ],
  // "references": [{ "path": "./tsconfig.node.json" }]
}